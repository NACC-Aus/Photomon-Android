<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Sherlock.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
     <style name="Theme.Styled" parent="@style/Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="actionBarSize">@dimen/action_bar_height</item>
        <item name="android:actionBarSize">@dimen/action_bar_height</item>

        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

    </style>

    <style name="Theme.Styled.AlphabetIndexer" parent="Theme.Styled">
        <item name="android:textColorPrimary">#ffffffff</item>
    </style>

    <style name="Theme.Styled.NoTitleBar" parent="Theme.Styled">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid">
    </style>


</resources>